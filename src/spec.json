{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": { "title": "Month of the year" }
    },
    "y": {
      "aggregate": "sum",
      "field": "amount",
      "type": "quantitative"
    },
    "color": {
      "field": "serieIndex",
      "type": "nominal",
      "scale": {
        "domain": [1, 2, 3, 4, 5, 6]
      },
      "legend": { "title": "Serie number" }
    }
  },
  "width": 800,
  "height": 400
}
